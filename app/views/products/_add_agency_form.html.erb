
	
		<div class="panel">

			<div class="panel-body">
			<%= form_tag create_agency_linkage_products_path, :class => 'panel-body form-horizontal form-padding' do %>
				<input type="hidden" name="agency_linkage[product_id]" value="<%= @product.id %>"></input>
			  <div class="form-group pad-ver">
		      <label class="col-md-3 control-label">Agency Company:</label>
		      <div class="col-md-9">
						<select class="selectpicker" name="agency_linkage[company_id]">
							<option>Select An Option</option>
							<% Company.where("type_id = 2").each do |p| %>
								<option value="<%= p.id %>" ><%= p.name %></option>
							<% end %>
						</select>
		      </div>
		    </div>

			  <div class="panel-footer">
			    <div class="row">
			      <div class="col-sm-9 col-sm-offset-3">
			        <button class="btn btn-info btn-labeled fa fa-user fa-lg" name="commit" type="submit">Add</button>
			        <button class="btn btn-warning btn-labeled fa fa-repeat fa-lg back_btn" type="reset">Back</button>
			      </div>
			    </div>
			  </div>
			<% end %>
			</div>
    </div>

