<div id="agency_assign-tab" class="tab-pane fade">
	<div class="panel">
		<div class="panel-heading">
			<h3 class="panel-title">Agency Linkage List</h3>
		</div>
    <div class="panel-body">
      <%= form_tag update_agency_linkage_product_path(@agencies), :class => "panel-body form-horizontal form-padding" do %>

			<table class="table table-striped table-hover">
        <thead>
        <tr>
          <th>Name</th>
          <th class="text-center">Action</th>
        </tr>
        </thead>
        <tbody>

        <% @agencies.each do |p| %>
        
        <tr>
          <td>
            <%= label_tag "product_linkage[#{p.company_id}][name]", p.company.name, :class=>"form-control" %>
          </td>
          <td class="text-center">
            <%= link_to 'Remove', remove_agency_linkage_product_path(p), method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn btn-small btn-danger" %>
          </td>
        </tr>
        
        <% end %>
        </tbody>
      </table>

      <% end %>
    </div>
  </div>
</div>