<div class="row" id="content_div">
	<div class="col-lg-6">
		<div class="panel">
			<div class="panel-heading">
				<h3 class="panel-title"><%= @product.product_title %></h3>
			</div>

			<div class="panel-body">
			<%= form_tag generate_lot_products_path, :class => 'panel-body form-horizontal form-padding' do %>
			
				<div class="form-group">
			    <label class="col-md-3 control-label" for="lob_no">No. of Lot to Generate: </label>
			    <div class="col-md-9">
			      <%= text_field_tag "lob_no",nil, class: "form-control" %>
			    </div>
			  </div>

			  <div class="form-group pad-ver">
      <label class="col-md-3 control-label">Type</label>
      <div class="col-md-9">
          <!-- Inline radio buttons -->
        <select class="selectpicker">
					<option>Select An Option</option>
					<% @ProductType.order(:name).each do |f| %>
					<option value="<%= f.id %>"><%= f.name %></option>
					<% end %>
				</select>
      </div>
    </div>

			  <div class="form-group">
			    <label class="col-md-3 control-label" for="lob_type">Prepend Title: </label>
			    <div class="col-md-9">
			      <%= text_field_tag "prepend_title", nil, class:"form-control" %>
			    </div>
			  </div>

			  <div class="form-group">
			    <label class="col-md-3 control-label" for="lob_type">Starting Number: </label>
			    <div class="col-md-9">
			      <%= text_field_tag "prepend_title", nil, class:"form-control" %>
			    </div>
			  </div>

			  <div class="form-group">
			    <label class="col-md-3 control-label" for="lob_type"></label>
			    <div class="cl-md-9">Prepend Title will be added into the name of each lot with the number when generate.</div>
			  </div>

			  <%= submit_tag "Generate Lot" %>
			<% end %>
			</div>
    </div>
  </div>
</div>