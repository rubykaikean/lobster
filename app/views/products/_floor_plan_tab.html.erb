
<div id="floor_plan-tab" class="tab-pane fade ">
    <h4 class="text-thin"></h4>
    <div class="panel">
    <div class="panel-body">
  
      <table class="table table-striped table-hover">
        <thead>
        <tr>
          <th>Image</th>
          <th class="text-center">Action</th>
        </tr>
        </thead>
        <tbody>

        <% @product.floor_plans.each do |floor_plan| %>
        
        <tr>
          <td>
            <%= image_tag(floor_plan.image.url(:medium), class: "img-responsive thumbnail") %>
          </td>
        
          <td class="text-center">
            <%= link_to 'Delete', [@product, floor_plan], method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn btn-small btn-danger" %>
          </td>
        </tr>
        
        <% end %>
        </tbody>
      </table>
      
    </div>
  </div>
</div>