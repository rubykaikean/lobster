      </div>
    </div>
  </div>

  <script type="text/javascript">
   $( document ).ready(function() {

        var loc = window.location.href;
        var pathName = loc.split("#");
        var tab_id = pathName.pop();
        if(tab_id !== undefined) {
          $('#product_options_tabs a[href="#'+ tab_id +'"]').tab("show");
        }
    
   });
  </script>