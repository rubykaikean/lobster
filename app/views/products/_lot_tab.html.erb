 <div id="lot-tab" class="tab-pane fade active in">
  <h4 class="text-thin"></h4>
   <div class="panel">
    <div class="panel-body">
      <div class="panel-title"><strong>Search</strong></div>
      <div class="row">
        <%= search_form_for @q, url: product_path(@product) do |f| %>

        <table class="table">
          <tr>
            <td>Name: </td>
            <td><%= f.search_field :name_cont, :placeholder => "Search Name", :class => "form-control"%>
            </td>
            <td>Type: </td>
            <td>
              <select id="q_product_type_id_eq" name="q[product_type_id_eq]" class="selectpicker">
                <option value="">All Type</option>
                <% @product_types.each do |pro| %>
                  <option value="<%= pro.id %>"><%= pro.name %></option>
                <% end %>
              </select>
            </td>
          </tr>
          
          <tr>
            <td><%#= render :text => params %></td>
            <td></td>
            <td></td>
            <td><%= f.submit "Search", :class=>"btn btn-default" %></td>
          </tr>
        </table>
        <% end %>
      

      <%= form_tag update_lot_lots_path do %>
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>Name</th>
            <th class="text-center">Type</th>
            <th class="text-center">Price</th>
            <th class="text-center">Status</th>
            <!-- <th class="text-center">Action</th> -->
          </tr>
        </thead>
        
        <tbody>
          <% @lots.order(:name).each do |lot| %>
            <tr>
              <td>
                <%= text_field_tag "update_lot[#{lot.id}][name]", lot.name, :class=>"form-control" %>
              </td>
              <td class="text-center">
                <%#= lot.product_type.name %>
                
                <select class="selectpicker" name="update_lot[<%= lot.id %>][product_type_id]">
                  <option>Select An Option</option>
                  <% @product.product_types.each do |t| %>
                    <% if t.id == lot.product_type_id %>
                      <option value="<%= t.id %>" selected><%= t.name %></option>
                    <% else %>
                      <option value="<%= t.id %>"><%= t.name %></option>
                    <% end %>
                  <% end %>
                </select>
                <%#= text_field_tag "update_lot[#{lot.id}][product_type.name]", lot.product_type.name, :class=>"form-control" %>
              </td>
              <td class="text-center">
                <%= text_field_tag "update_lot[#{lot.id}][selling_price]", lot.selling_price, :class=>"form-control" %>
              <td>
              <td class="text-center">
                <%= lot.status  %>
              </td>
              <!-- <td class="text-center"> -->
              <%#= link_to 'Destroy', lots_path(lot), method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn btn-danger btn-small" %>
              <!-- </td> -->
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= submit_tag "Update", :class=>"btn btn-primary pull-right" if @product.lots.any? %>
      <% end %>
    </div>
  </div>
  </div>
</div>

 