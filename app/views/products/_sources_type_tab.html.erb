
<div id="new_sources_type-tab" class="tab-pane fade">
    <div class="panel">
    <div class="panel-body">
      <%= form_tag update_sources_type_product_path(@product) do %>
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>Name</th>
            
          </tr>
        </thead>
        
        <tbody>
          <% @sources_types.each do |sources_type| %>
            <tr>
              <td>
                <%= text_field_tag "sources_type[#{sources_type.id}][name]", sources_type.name, :class=>"form-control" %>
              </td>
              <td>
                <%= link_to 'Destroy', sources_type_path(sources_type), method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn btn-small btn-danger" %>
              </td>
            </tr>
            
          <% end %>
        </tbody>
      </table>
      <%= submit_tag "Update", :class=>"btn btn-primary pull-right" if @product.regions.any? %>
      <% end %>
    </div>
  </div>
</div>