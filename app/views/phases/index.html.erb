<div class="row" id="content_div">
  <div class="col-lg-12">

      <div class="panel">
        <div class="panel-heading">
            <div class="panel-control">
                <a class="fa fa-question-circle fa-lg fa-fw unselectable add-tooltip" href="#" data-original-title="<h4 class='text-thin'>Information</h4><p style='width:150px'>Click on the project name for more detail.</p>" data-html="true" title=""></a>
              </div>
              <h3 class="panel-title">Projects</h3>
        </div>

        <div class="panel-body">
          <div class="table-responsive">
            <table class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Status</th>
                  <th>Company</th>
                  <th class="text-center">Action</th>
                </tr>
              </thead>
              <tbody>
                <% @phases.each do |phase| %>
                <%# current_user.company.projects.phase.each do |phase| %>
                  <tr>
                    <td><%= link_to(phase.name, phase) %></td>
                    <td><%= phase.status_id %></td>
                    <td><%= phase.project.name %></td>
                    <td class="text-center">
                      <a class="btn btn-xs btn-default add-tooltip" data-toggle="tooltip" href="<%= phase_path(phase) %>" data-original-title="Edit" data-container="body"><i class="fa fa-pencil"></i></a>

                      
                      <a class="btn btn-xs btn-danger add-tooltip"  data-toggle="tooltip" href="<%= phase_path(phase) %>" data-original-title="Delete" data-method="delete" data-confirm="Are you sure?" data-container="body"><i class="fa fa-times"></i></a>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div> <!-- table responsive-->
        </div>
      </div>

  </div>
</div>