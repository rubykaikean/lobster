
<!-- <div class="cls-content"> -->
  <div class="cls-content-lg panel">
    <div class="panel-body">
      <div class="form-horizontal">
        <%= form_for(@phase) do |f| %>

            <div class="form-group">
                <label class="col-sm-3 control-label">Project Name:</label>
                <div class="col-sm-6">
                  <%= Project.find(params[:id]).name %>
                </div>
              </div>
            <div class="form-group">
              <label class="col-sm-3 control-label">Name:</label>
              <div class="col-sm-6">
                <%= f.text_field :name, :placeholder=>"Enter Name", :class=>"form-control" %>
              </div>
            </div>

            <div class="form-group">
              <label class="col-sm-3 control-label">Description:</label>
              <div class="col-sm-6">
                <%= f.text_field :description, :placeholder=>"Enter Description", :class=>"form-control" %>
              </div>
            </div>

            <div class="form-group">
              <label class="col-sm-3 control-label">Status:</label>
              <div class="col-sm-6">
              <% if params[:action] == "new" %>
                <%= f.text_field :status_id, :class=>"form-control", :value=>"1" %>
              <% else %>
                <label class="form-radio form-normal"><input type="radio" value="1" name="status_id">Variable</label>
                <label class="form-radio form-normal"><input type="radio" value="2" name="status_id">Pending</label>
              <% end %>
              </div>
            </div>
          <div style="display:none;"><%= f.number_field :project_id, :value=> params[:id], :class=>"form-control" %>
          </div>
          <br>
          <%= f.submit "Submit Phase", :class=>"btn btn-default" %>
        <% end %>
      </div>
    </div>
  </div>
