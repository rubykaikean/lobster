<% if @order %>
	<% a = @order.order_id.to_i %>
	<% order_id = a + 1 %>
<% end %>
<%= form_tag molpay_create_molpay_transaction_path do %>
<div class="row" id="content_div">
  <div class="col-lg-12">
    <div class="panel">
      <div class="panel-heading">
        <h3 class="panel-title">Molpay - Booking Fee</h3>
      </div>
      <div class="panel-body">
      	<%= hidden_field_tag "molpay[sale_id]", value=@sale.id %>
      	<table class="table table-bordered">
      		
      		<tr>
      			<td class="text-center">Unit No.</td>
      			<td class="text-center"><%= @sale.lot.name %></td>
      		</tr>
      		<tr>
      			<td class="text-center">Amount :</td>
      			<td class="text-center">
      				RM 2.0<%#= number_with_precision(@sale.booking_fee, precision: 0, separator: ".", delimiter: ",") %>
      				<%= hidden_field_tag "molpay[amount]",nil, :value=> "2.0" %>
      			</td>
      		</tr>
      		<tr>
      			<td class="text-center">Order ID :</td>
      			<td class="text-center">
      				<% unless order_id %>
						10000
						<%= hidden_field_tag "molpay[order_id]", value="10000" %>
					<% else %>
						<%= order_id %>
						<%= hidden_field_tag "molpay[order_id]", value="#{order_id}" %>
					<% end %>
      			</td>
      		</tr>
      		<tr>
      			<td class="text-center">Bill Name: </td>
      			<td class="text-center">
      				<%= @sale.buyer.full_name rescue '-' %>
      				<%= hidden_field_tag "molpay[bill_name]", nil, :value=>@sale.buyer.full_name %>
      			</td>
      		</tr>
      		<tr>
      			<td class="text-center">Bill Email: </td>
      			<td class="text-center">
      				<%= @sale.buyer.email rescue '-' %>
      				<%= hidden_field_tag "molpay[bill_email]", nil, :value=>@sale.buyer.email %>
      			</td>
      		</tr>
      		<tr>
      			<td class="text-center">Bill Mobile Number: </td>
      			<td class="text-center">
      				<%= @sale.buyer.mobile_contact_number rescue '-' %>
      				<%= hidden_field_tag "molpay[bill_mobile]", nil, :value=>@sale.buyer.mobile_contact_number %>
      			</td>
      		</tr>
      		<tr>
      			<td class="text-center">Bill Description: </td>
      			<td class="text-center">
      				<%= @sale.buyer.remark rescue '-' %>
      				<%= hidden_field_tag "molpay[bill_desc]", nil, :value=>@sale.buyer.remark %>
      			</td>
      		</tr>
      	</table>

      	<div class="panel-footer">
			    <div class="row">
			      <div class="col-sm-3 col-sm-offset-8">
			      <% unless @sale.booking_fee %>
			               Booking fee cannot empty 
			      <% else %>
			        <button class="btn btn-info btn-labeled fa fa-user fa-lg" type="submit">Submit</button>
			      <% end %>
			      </div>
			    </div>
			  </div>

      </div>
    </div>
  </div>
</div>
<% end %>
		  

	

