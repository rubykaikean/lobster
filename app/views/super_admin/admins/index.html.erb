<div class="row" id="content_div">
  <div class="col-lg-7">

  <div class="panel">
      <div class="panel-heading">
        <div class="panel-control">
          <a class="fa fa-question-circle fa-lg fa-fw unselectable add-tooltip" href="#" data-original-title="<h4 class='text-thin'>Information</h4><p style='width:150px'>Click on the client name for more detail.</p>" data-html="true" title=""></a>
        </div>
        <h3 class="panel-title">Administrator</h3>
      </div>

      <div class="panel-body">
        <div class="pad-btm form-inline">
          <div class="row">
            <div class="col-sm-6 table-toolbar-left">
              <button id="add_client_btn" class="btn btn-purple btn-labeled fa fa-plus">
                New Admin
              </button>
              <!-- <div class="btn-group btn-group">
                <button class="btn btn-default"><i class="fa fa-exclamation-circle"></i></button>
                <button class="btn btn-default"><i class="fa fa-trash"></i></button>
              </div> -->
            </div>
          </div>
        </div>
        <div class="table-responsive">
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th>Display Name</th>
                <th>Email</th>
                <th class="text-center">Action</th>
              </tr>
            </thead>

             <tbody>
              <% @admins.each do |admin| %>
                <tr>
                  <td><%= admin.display_name %></td>
                  <td><%= admin.email %></td>
                  <td class="text-center">
                    <%= link_to 'Show', super_admin_admin_path(admin), :class=>"btn btn-small btn-warning" %>
                    <%= link_to 'Destroy', super_admin_admin_path(admin), method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn btn-small btn-danger #{admin.id == current_admin.id ? 'disabled' : nil}" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
          </div>
      </div>
    </div>

  </div>
</div>

<script type="text/javascript">
  
  $("#add_client_btn").click(function() {
    window.location.href='<%= new_super_admin_admin_path %>';
  });
</script>

