<div class="row" id="content_div">
  <div class="col-lg-12">

    <div class="panel">
      <div class="panel-heading">
        <div class="panel-control">
          <a class="fa fa-question-circle fa-lg fa-fw unselectable add-tooltip" href="#" data-original-title="<h4 class='text-thin'>Information</h4><p style='width:150px'>Click on the client name for more detail.</p>" data-html="true" title=""></a>
        </div>
        <h3 class="panel-title">Blogs (<%= @product.name %>)</h3>
      </div>

      <div class="panel-body">
        <div class="pad-btm form-inline">
          <div class="row">
            <div class="col-sm-6 table-toolbar-left">
              <button data-target="#new_blogs" data-toggle="modal" class="btn btn-primary">Add New blogs</button>
            </div>
          </div>
        </div>
        <div class="table-responsive">
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Background Image</th>
                <th class="text-center">Action</th>
              </tr>
            </thead>

            <tbody>
              <% @blogs.each do |blog| %>
                <tr>
                  <td><%= blog.name %></td>
                  <td><%= blog.description %></td>
                  <td>
                    <%= image_tag blog.blog_background_image.url(:thumb) %>
                  </td>
                  <td class="text-center">
                    <%#= link_to 'Show', blog, :class=>"btn btn-small btn-warning" %>
                    <%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure you want to destroy the company? This action cannot be undo.' }, :class=>"btn btn-small btn-danger" %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

  </div>
</div>

  <div class="modal fade" id="new_blogs" role="dialog" tabindex="-1" aria-labelledby="new_features" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">

        <!--Modal header-->
        <div class="modal-header">
          <button data-dismiss="modal" class="close" type="button">
          <span aria-hidden="true">&times;</span>
          </button>
          <h4 class="modal-title">New Blog</h4>
        </div>

        <!--Modal body-->
        <div class="modal-body">
          <%= render "/blogs/form" %>
        </div>
      </div>
    </div>
  </div>


<script type="text/javascript">
  
  $("#add_client_btn").click(function() {
    window.location.href='<%= new_blog_path(:product_id => @product.id) %>';
  });
</script>


