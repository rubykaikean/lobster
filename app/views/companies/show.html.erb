<div class="row" id="content_div">
  <div class="col-lg-6">
    <div class="panel">
      <div class="panel-heading">
        <h3 class="panel-title">Client detail</h3>
      </div>

      <div class="panel-body">
          <p>
            <strong>Name:</strong>
            <%= @company.name %>
          </p>

          <p>
            <strong>Registration number:</strong>
            <%= @company.registration_number %>
          </p>

          <p>
            <strong>Address:</strong>
            <%= @company.address %>
          </p>

          <p>
            <strong>Phone number:</strong>
            <%= @company.phone_number %>
          </p>

          <p>
            <strong>Fax number:</strong>
            <%= @company.fax_number %>
          </p>
          <p>
            <strong>Type:</strong>
            <%= @company.type %>
          </p>

          <%= link_to 'Edit', edit_company_path(@company), :class=>"btn btn-small btn-warning" %>
          <%= link_to 'Back', companies_path, :class=>"btn btn-small btn-warning" %>
      </div>
    </div>
    
    <hr>

    <div class="panel">
        <div class="panel-heading">
          <h3 class="panel-title">Company Setting</h3>
        </div>
        <%= form_tag update_company_setting_companies_path do %>
        <div class="panel-body">
            <div class="form-group">
              <div class="col-md-12">
                <div class="table-responsive">
                <table class="table table-bordered">
                  <tr>
                    <td>Allow Multiper Booking</td>
                    <td>
                      <label>
                        <input type="radio" name="company_setting[allow_multiple_booking]" <%= @company.company_setting.try(:allow_multiple_booking) == true ? "checked" : nil %> value="true"> Yes
                      </label>
                      <label>
                        <input type="radio" name="company_setting[allow_multiple_booking]" <%= @company.company_setting.try(:allow_multiple_booking) == false ? "checked" : nil %> value="false"> No
                      </label>
                    </td>
                  </tr>
                </table>
                </div>
              <div style="display:none;">
                <%= text_field_tag "company_setting[company_id]", nil, value: @company.id, :class=>"form-control" %>
                </div>
            </div>
          </div>
          <%= submit_tag "Update", :class=>"btn btn-primary pull-right" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>