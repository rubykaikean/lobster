<div class="row" id="content_div">
  <div class="col-lg-6">
    <div class="panel">
      <div class="panel-heading">
        <h3 class="panel-title">Agency detail</h3>
      </div>

      <div class="panel-body">
          <p>
            <strong>Name:</strong>
            <%= @company.name %>
          </p>

          <p>
            <strong>Registration number:</strong>
            <%= @company.registration_number %>
          </p>

          <p>
            <strong>Address:</strong>
            <%= @company.address %>
          </p>

          <p>
            <strong>Phone number:</strong>
            <%= @company.phone_number %>
          </p>

          <p>
            <strong>Fax number:</strong>
            <%= @company.fax_number %>
          </p>
          <p>
            <strong>Type:</strong>
            <%= @company.type %>
          </p>

          <%= link_to 'Edit', edit_company_path(@company), :class=>"btn btn-small btn-info" %>
          <%= link_to 'Back', companies_path, :class=>"btn btn-small btn-warning" %>
      </div>
    </div>

      <div class="panel">
        <div class="panel-heading">
          <h3 class="panel-title">User</h3>
        </div>
       
        <div class="panel-body">
            <div class="form-group">
              <div class="col-md-12">
                <div class="table-responsive">
                <table class="table table-striped table-hover">
                  <thead>
                    <tr>
                      <th>Display Name</th>
                      <th>Email</th>
                      <th class="text-center">Type</th>
                      <!-- <th class="text-center">Action</th> -->
                    </tr>
                  </thead>

                  <tbody>
                    <% @company.users.each do |user| %>
                      <tr>
                        <td><%= user.display_name %></td>
                        <td><%= user.email %></td>
                        <td class="text-center"><%= user.type %></td>
                       <!--  <td class="text-center">
                          <%#= link_to 'Show', user, :class=>"btn btn-small btn-warning" %>
                          <%#= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn btn-small btn-danger" %></td> -->
                      </tr>
                    <% end %>
                  </tbody>
                </table>
                </div>
            </div>
          </div>
        </div>
    </div>

    </div>
  </div>
</div>