<%= form_for(@company, html: {class: "panel-body form-horizontal form-padding"}) do |f| %>

  <div class="form-group">
    <label class="col-md-3 control-label" for="company_name">Name</label>
    <div class="col-md-9">
      <input type="text" id="company_name" name="company[name]" class="form-control" placeholder="Company name" value="<%= @company.name %>">
      <!-- <small class="help-block">This is a help text</small> -->
    </div>
  </div>

  <div class="form-group">
    <label class="col-md-3 control-label" for="company_registration_number">Registration No</label>
    <div class="col-md-9">
      <input type="text" id="company_registration_number" name="company[registration_number]" class="form-control" placeholder="Company registration number" value="<%= @company.registration_number %>">
      <!-- <small class="help-block">This is a help text</small> -->
    </div>
  </div>

  <!--Textarea-->
  <div class="form-group">
    <label class="col-md-3 control-label" for="company_address">Address</label>
    <div class="col-md-9">
      <textarea id="company_address" name="company[address]" rows="9" class="form-control" placeholder=""><%= @company.address %></textarea>
    </div>
  </div>

  <div class="form-group">
    <label class="col-md-3 control-label" for="company_phone_number">Phone Number</label>
    <div class="col-md-9">
      <input type="text" id="company_phone_number" name="company[phone_number]" class="form-control" placeholder="Company phone number" value="<%= @company.phone_number %>">
      <!-- <small class="help-block">This is a help text</small> -->
    </div>
  </div>

  <div class="form-group">
    <label class="col-md-3 control-label" for="company_fax_number">Fax Number</label>
    <div class="col-md-9">
      <input type="text" id="company_fax_number" name="company[fax_number]" class="form-control" placeholder="Company fax number" value="<%= @company.fax_number %>">
      <!-- <small class="help-block">This is a help text</small> -->
    </div>
  </div>

    <% if @company.new_record? %>
      <div class="panel-heading">
        <h3 class="panel-title">Create administrator login</h3>
      </div>
      <div class="form-group">
        <label class="col-md-3 control-label" for="username">Full Name</label>
        <div class="col-md-9">
          <input type="text" id="username" name="username" class="form-control" placeholder="Full name" value="<%= @user.username %>">
          <!-- <small class="help-block">This is a help text</small> -->
        </div>
      </div>
      <div class="form-group">
        <label class="col-md-3 control-label" for="company_email">Email</label>
        <div class="col-md-9">
          <input type="email" id="company_email" name="company_email" class="form-control" placeholder="email" value="<%= @user.email%>">
          <!-- <small class="help-block">This is a help text</small> -->
        </div>
      </div>
      <div class="form-group">
        <label class="col-md-3 control-label" for="company_password">Password</label>
        <div class="col-md-9">
          <input type="password" id="company_password" name="company_password" class="form-control" placeholder="password" >
          <!-- <small class="help-block">This is a help text</small> -->
        </div>
      </div>
      <div class="form-group">
        <label class="col-md-3 control-label" for="company_password_confirmation">Password Confirmation</label>
        <div class="col-md-9">
          <input type="password" id="company_password_confirmation" name="company_password_confirmation" class="form-control" placeholder="password confirmation" >
          <!-- <small class="help-block">This is a help text</small> -->
        </div>
      </div>

    <% end %>

    <div class="panel-footer">
      <div class="row">
        <div class="col-sm-9 col-sm-offset-3">
          <button class="btn btn-info btn-labeled fa fa-user fa-lg" type="submit">Submit</button>
          <button class="btn btn-warning btn-labeled fa fa-repeat fa-lg" type="reset" id="back_btn">Back</button>
        </div>
      </div>
    </div>

<% end %>

<script type="text/javascript">
  
  $("#back_btn").click(function(e){
    e.preventDefault();
    <% if @company.new_record? %>
      window.location.href='<%= companies_path %>';
    <% else %>
      window.location.href='<%= company_path(@company) %>';
    <% end %>
  });
</script>


           
               