<% content_for :javascripts do %>
  <script type="text/javascript">
    $("#back_btn").click(function(e){
      e.preventDefault();
      window.location.href='<%= sales_path %>';
    });

  </script>
<% end %>
<div class="row" id="content_div">
  <div class="col-lg-12">
    <div class="panel">
      <div class="panel-heading">
        <h3 class="panel-title">Editing Sale detail</h3>
      </div>
      <%= form_tag add_payment_sale_path(@sale), :class => 'panel-body form-horizontal form-padding', :multipart => true do  %>
       

        <% if @sale.user_id == current_user.id %>
            <br>
            <div class="form-group">
              <label class="col-md-3 control-label" for="payment_image">Payment images: </label>
              <div class="col-md-9 upload_payments_wrapper">
                <div class="upload_fields">
                  <input type="file" id="payment_image" name="payment_image[]" class="form-control" required>
                  <% 4.times do %>
                    <input type="file" id="payment_image" name="payment_image[]" class="form-control" >
                  <% end %>
                </div>
                <!-- <button class="add_more_photo_button btn btn-info">Add more photo</button> -->
              </div>
            </div>

            <div class="form-group">
              <label class="col-md-3 control-label">
                Booking Fee pay with molpay:
              </label>
              <div class="col-md-9">
                <!-- hide button if found at transaction history -->
                <% if @molpay_payment %>
                  <labe>Payment Paid!</label>
                <% else %>
                  <%= link_to "Pay With Molpay", molpay_subscribe_path(:id => @sale.id), :class=>"btn btn-warning" %>
                <% end %>
              </div>
            </div>
        <% end %>

        <br>
        <div class="form-group">
          <div class="row">
            <div class="col-sm-9 col-sm-offset-3">
                <br>
              <button class="btn btn-info btn-labeled fa fa-user fa-lg" type="submit">Submit</button>
              <button class="btn btn-warning btn-labeled fa fa-repeat fa-lg" type="reset" id="back_btn">Back</button>
            </div>
          </div>
        </div>

      <% end %>
    </div>
  </div>
</div>