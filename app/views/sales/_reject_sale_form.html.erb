<%= form_tag reject_sale_path(sale), {:class => 'panel-body form-horizontal form-padding'}  do %>
  
  <% @product = Product.friendly.find(sale.product_id) %>
  <% @customization = @product.reservation_customization %>

  <div class="form-group">
    <label class="col-md-3 control-label" for="sale_reject_reason">Reject Reason:</label>
    <div class="col-md-9">
      <input type="text" id="sale_reject_reason" name="sale[reject_reason]" class="form-control" placeholder="Reject Reason" <%= @customization.reject_reason_required? ? 'required' : nil %>>
    <% if @customization.reject_reason_required?  %>
      <small class="help-block">Required field</small>
    <% end %>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-sm-9 col-sm-offset-3">
        <br>
        <button class="btn btn-info btn-labeled fa fa-user fa-lg" type="submit">Submit</button>
        <!-- <button class="btn btn-warning btn-labeled fa fa-repeat fa-lg" type="reset" id="back_btn">Back</button> -->
      </div>
    </div>
  </div>

<% end %>
