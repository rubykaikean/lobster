<%= form_tag cancel_sale_path(sale), {:class => 'panel-body form-horizontal form-padding'}  do %>

  <div class="form-group">
    <label class="col-md-3 control-label" for="sale_cancel_reason">Cancel Reason:</label>
    <div class="col-md-9">
      <input type="text" id="sale_cancel_reason" name="sale[cancel_reason]" class="form-control" placeholder="Cancel Reason">
      <!-- <small class="help-block">This is a help text</small> -->
    </div>
  </div>
  <div class="form-group">
    <div class="row">
      <div class="col-sm-9 col-sm-offset-3">
        <br>
        <button class="btn btn-info btn-labeled fa fa-user fa-lg" type="submit">Submit</button>
        <!-- <button class="btn btn-warning btn-labeled fa fa-repeat fa-lg" type="reset" id="back_btn">Back</button> -->
      </div>
    </div>
  </div>

<% end %>
