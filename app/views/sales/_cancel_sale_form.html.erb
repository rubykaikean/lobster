<%= form_tag cancel_sale_path(sale), {:class => 'panel-body form-horizontal form-padding'}  do %>

  <% product = Product.find(sale.product_id) %>
  <% @customization = product.reservation_customization %>

  <%# if @customization.reject_reason? %>
    <div class="form-group">
      <label class="col-md-3 control-label" for="sale_cancel_reason">Cancel Reason:</label>
      <div class="col-md-9">
        <input type="text" id="sale_cancel_reason" name="sale[cancel_reason]" class="form-control" placeholder="Cancel Reason" <%#= @customization.reject_reason_required? ? 'required' : nil %> >
          <%# if @customization.reject_reason_required? %>
            <!-- <small class="help-block">Required field</small> -->
          <%# end %>
      </div>
    </div>

  <% if @customization.cancel_date? %>
    <div class="form-group">
      <label class="col-md-3 control-label" for="sale_cancel_date">Cancel Date: </label>
      <div class="col-md-9">
        <div class="input-group date">
          <input type="text" class="form-control" name="sale[cancel_date]" id="sale_cancel_date" value="" <%= @customization.cancel_date_required? ? 'required' : nil %> >
          <span class="input-group-addon"><i class="fa fa-calendar fa-lg"></i></span>
        </div>
        
        <small class="text-muted">Click to select the Cancel date.</small>
        <% if @customization.cancel_date_required?  %>
          <small class="help-block">Required field</small>
        <% end %>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <div class="row">
      <div class="col-sm-9 col-sm-offset-3">
        <br>
        <button class="btn btn-info btn-labeled fa fa-user fa-lg" type="submit">Submit</button>
        <!-- <button class="btn btn-warning btn-labeled fa fa-repeat fa-lg" type="reset" id="back_btn">Back</button> -->
      </div>
    </div>
  </div>

<% end %>
