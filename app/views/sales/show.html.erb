<div id="payment-carousel" class="carousel slide" data-ride="carousel">
          
  <!--Indicators-->
  <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
  <ol class="carousel-indicators dark out">
    <% @payments.each_with_index do |payment, index| %>
    <li class="<%= index == 0 ? 'active' : nil %>" data-slide-to="<%= index  %>" data-target="#payment-carousel"></li>
    <% end %>

   <!--  <li data-slide-to="1" data-target="#payment-carousel"></li>
    <li class="" data-slide-to="2" data-target="#payment-carousel"></li> -->
  </ol>
  <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
  <div class="carousel-inner text-center">
    <% @payments.each_with_index do |payment, index| %>
      <div class="item <%= index == 0 ? 'active' : nil %>">
        <div class="media text-center"><img src="<%= payment.image.url %>" alt="Payment image"></div>
      </div>
    <% end %>
  </div>

  <div class="form-group">
    <div class="col-md-6 control-label text-center">
      Cheque Number: <br>
      <%= @sale.cheque_number %>
    </div>

    <div class="col-md-6 control-label text-center">
      Transaction Number: <br>
      <%= @sale.transaction_number %>
    </div>
  </div>
  <!--carousel-control-->
  <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
  <a class="carousel-control left" data-slide="prev" href="#payment-carousel"><i class="fa fa-chevron-left fa-2x"></i></a>
  <a class="carousel-control right" data-slide="next" href="#payment-carousel"><i class="fa fa-chevron-right fa-2x"></i></a>
  <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->

</div>
<!--===================================================-->
<!--End Carousel-->
