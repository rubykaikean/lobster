    <label class="col-md-3 control-label" for="product_type_product_id">Product</label>
    <div class="col-md-9">
      <%#= Product.find(id).name %>
      <input type="text" name="product_type[product_id]" value="<%#= id %>" style="display:none;"></input>
      <input type="text" name="phase_id" value="<%#= params[:phase_id] %>" style="display:none;"></input>
