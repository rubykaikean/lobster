 <div class="row" id="content_div">
  <div class="col-lg-12">
  <div class="panel">
    <div class="panel-body">
      <script src="http://code.highcharts.com/highcharts.js"></script>
      <script src="http://code.highcharts.com/modules/exporting.js"></script>
      <div id="unit_region_chart" style="min-width: 310px; height: 400px; max-width: 600px; margin: 0 auto"></div>
    
    <hr> 
    <div class="table-responsive">
    <%#= render :text => Buyer.first.to_json %>
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th>Region</th>
            <th>Unit</th>
          </tr>
             <% @combine.each do |key, value| %>
          <tr>
            <td class="text-center"><%= key %></td>
            <td><%= value %></td>
          </tr>
          <% end %>
        </tbody>
        
      </table>
      <%= link_to "Export Excel", export_regions_excel_reports_path(format: "xls"), :class=>"btn btn-primary" %>
    </div>
  </div>
</div>
</div>
</div>

<%= render "/layouts/highchart_options"  %>

<script type="text/javascript">
  $(function () {
            var combine = <%= raw @combine.to_json %>
            console.log(combine);

            var f = [];
            $.each( combine, function( key, value ) {
              // arrayMy.push("'" + key + "'" + ", " + value);
              var x = new Array(key , value);
              f.push(x);
            });
            console.log(f);

            $('#unit_region_chart').highcharts({
                chart: {
                    plotBackgroundColor: null,
                    plotBorderWidth: 1,//null,
                    plotShadow: false
                },
                title: {
                    text: 'Analysis Region Report.'
                },
                tooltip: {
                    pointFormat: '{series.name}: <b>{point.percentage:.0f} %</b>'
                },
                plotOptions: {
                    pie: {
                        allowPointSelect: true,
                        cursor: 'pointer',
                        dataLabels: {
                            enabled: true,
                            format: '<b>{point.name}</b>: {point.percentage:.0f} %',
                            style: {
                                color: (Highcharts.theme && Highcharts.theme.contrastTextColor) || 'black'
                            }
                        }
                    }
                  },
                series: [{
                    type: 'pie',
                    name: 'Unit Percentage:',
                    data: f
                          // arrayMy
                        // ['Firefox',   40.0],
                        // ['IE',       20.0],
                        // // {
                        // //     name: 'Chrome',
                        // //     y: 12.8,
                        // //     sliced: true,
                        // //     selected: true
                        // // }, 
                }]
            });
          });

</script>
