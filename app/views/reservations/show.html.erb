<%#= debug @lots  %>

	
<hr>
<%#= form_tag do %>
<div class="panel">
	<div class="panel-body">
	<div class="table-responsive">
			<table class="table table-striped table-hover">
			  <thead>
				<tr>
					<th class="text-center">Unit Name</th>
					<th class="text-center">Unit Type</th>
					<th class="text-center">Status</th>
					<th class="text-center">Action</th>
				</tr>
				</thead>
				<tbody>
				<% @lots.each do |lot| %>
				
				<tr>
					<td class="text-center"><%= lot.name %></td>
					<td class="text-center"><%= lot.product_type_id %></td>
					<td class="text-center"><%= lot.status %></td>
					<td>
						<!-- <button data-target="#book_lot" data-toggle="modal" class="btn btn-purple btn-labeled fa fa-plus">Book It</button> -->
						<%= link_to "Book It", book_lot_reservations_path(:id => lot.id), :class=>"btn btn-purple btn-labeled fa fa-plus" %>
					</td>
				</tr>
				
				<% end %>
				</tbody>

				
			</table>
		</div>
		<%#= submit_tag("Update", :class=>"btn btn-primary pull-right") if @lots.any? %>
	</div>
</div>
<%# end %>


	<div class="modal fade" id="book_lot" role="dialog" tabindex="-1" aria-labelledby="book_lot" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">

        <!--Modal header-->
        <div class="modal-header">
          <button data-dismiss="modal" class="close" type="button">
          <span aria-hidden="true">&times;</span>
          </button>
          <h4 class="modal-title">Enter Buyer Detail</h4>
        </div>

        <!--Modal body-->
        <div class="modal-body">
          
         <%= render "form" %>
        </div>
      </div>
    </div>
  </div>
