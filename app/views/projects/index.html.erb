<p id="notice"><%= notice %></p>

<h1>Listing Projects</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Status</th>
      <th>Company</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= project.description %></td>
        <td><%= project.status_id %></td>
        <td><%= project.company.name %></td>
        <td><%= link_to 'Show', project , :class=>"btn btn-small btn-warning"%>
        <%= link_to 'Edit', edit_project_path(project), :class=>"btn btn-small btn-info" %>
        <%= link_to 'Delete', project, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn btn-small btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Project', new_project_path, :class=>"btn btn-small btn-info" %>
