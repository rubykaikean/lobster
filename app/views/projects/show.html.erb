<p>
  <strong>Name:</strong>
  <%= @project.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @project.description %>
</p>

<p>
  <strong>Status:</strong>
  <%= @project.status_id %>
</p>

<p>
  <strong>Company:</strong>
  <%= @project.company_id %>
</p>
<%= link_to "create a phase", new_phase_path(:id => @project.id), :class=>"btn btn-default" %>
<hr>
<div class="panel">
	<%= form_tag update_phase_projects_path do %>
			<table class="table table-bordered">
				<tr>
					<th>No.</th>
					<th>Name</th>
					<th>Status</th>
				</tr>
				<% @phase.each_with_index do |p, index| %>
				<tr>
					<td><%= index + 1 %></td>
					<td>
						<%= text_field_tag "phase[name]", p.name, :class=>"form-control" %>
					</td>
					<td>
						<%= radio_button_tag "phase[#{p.id}][status_id]", 1 %>
						<%= radio_button_tag "phase[#{p.id}][status_id]", 2 %>
						<!-- <label class="form-radio form-icon form-text">
							<input type="radio" name="ico-w-label"> Avaiable 
						</label>
						<label class="form-radio form-icon form-text">
							<input type="radio" name="ico-w-label" > Pending 
						</label> -->
					</td>
					<td>
						<%= link_to 'Show', p, :class=>"btn btn-small btn-warning pull-right" %>
			      <%= link_to 'Edit', edit_phase_path(p), :class=>"btn btn-small btn-info pull-right"  %>
			    </td>
					</td>
				</tr>
				<% end %>

				
			</table>
			<%= submit_tag "Update", :class=>"btn btn-primary pull-right" %>
		<% end %>
</div>