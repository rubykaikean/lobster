<% if @company.is_developer? %>

	<div class="col-sm-12 col-md-6 col-lg-6">
	<!--Projects-->
	<a href="<%= projects_path %>">
	<div class="panel panel-purple panel-colorful">
		<div class="pad-all text-center">
			<span class="text-5x text-thin"><%= @projects_count %></span>
			<p>Projects</p>
			<i class="fa fa-university"></i>
		</div>
	</div>
	</a>
</div>

<div class="col-sm-12 col-md-6 col-lg-6">
	<!--Task-->
	<div class="panel panel-success panel-colorful">
		<div class="pad-all text-center">
			<span class="text-5x text-thin"><%= @products_count  %></span>
			<p>Products</p>
			<i class="fa fa-building"></i>
		</div>
	</div>
</div>

	<div class="col-sm-12 col-md-6 col-lg-6">				
		<!--New Items-->
		<a href="<%= companies_path %>">
		<div class="panel panel-info panel-colorful">
			<div class="pad-all text-center">
				<span class="text-5x text-thin"><%= @agency_count  %></span>
				<p>Agencies</p>
				<i class="fa fa-users"></i>
			</div>
		</div>
		</a>
	</div>

	<div class="col-sm-12 col-md-6 col-lg-6">				
		<!--Reports-->
		<a href="<%= users_path %>">
		<div class="panel panel-dark panel-colorful">
			<div class="pad-all text-center">
				<span class="text-5x text-thin"><%= @agent_count %></span>
				<p>Agents</p>
				<i class="fa fa-user"></i>
			</div>
		</div>
		</a>
	</div>
					
<% else %>

<div class="col-sm-12 col-md-4 col-lg-4">
	<!--Projects-->
	<div class="panel panel-purple panel-colorful">
		<div class="pad-all text-center">
			<span class="text-5x text-thin"><%= @projects_count %></span>
			<p>Projects</p>
			<i class="fa fa-university"></i>
		</div>
	</div>
</div>

<div class="col-sm-12 col-md-4 col-lg-4">
	<!--Task-->
	<div class="panel panel-success panel-colorful">
		<div class="pad-all text-center">
			<span class="text-5x text-thin"><%= @products_count  %></span>
			<p>Products</p>
			<i class="fa fa-building"></i>
		</div>
	</div>
</div>

<div class="col-sm-12 col-md-4 col-lg-4">				
	<!--Reports-->
	<div class="panel panel-dark panel-colorful">
		<div class="pad-all text-center">
			<span class="text-5x text-thin"><%= @saleman_count %></span>
			<p>Agents</p>
			<i class="fa fa-user"></i>
		</div>
	</div>
</div>


<% end %>

