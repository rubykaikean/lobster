<h3 class="panel-title"><strong>Lot List</strong></h3>

  <div class="panel">
    <div class="panel-body">
      <p>
        <strong>Name:</strong>
        <%= @product.name %>
      </p>

      <p>
        <strong>Description:</strong>
        <%= @product.description %>
      </p>

      <p>
        <strong>Status:</strong>
        <%= @product.status_id %>
      </p>

      <p>
        <strong>Phase:</strong>
        <%= @product.phase.name %>
      </p>
     
    </div>
  </div>
  <%#= link_to "Generate Lot", generate_lot_products_path(:id => @product.id), :class=>"btn btn-default" %>
  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Product</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @lots.each do |lot| %>
          <tr>
            <td><%= lot.name %></td>
            <td><%= lot.description %></td>
            <td><%= lot.product_id %></td>
            <td><%= link_to 'Show', lot %></td>
            <td><%= link_to 'Edit', edit_lot_path(lot) %></td>
            <td><%= link_to 'Destroy', lot, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

<br>

