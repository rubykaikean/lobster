<p id="notice"><%= notice %></p>

<h1>Listing Floor Plans</h1>

<table>
  <thead>
    <tr>
      <th>Project</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @floor_plans.each do |floor_plan| %>
      <tr>
        <td><%= floor_plan.project_id %></td>
        <td><%= link_to 'Show', [@product, floor_plan] %></td>
        <td><%= link_to 'Edit', edit_product_floor_plan_path(@product, floor_plan) %></td>
        <td><%= link_to 'Destroy', [@product, floor_plan], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Floor plan', new_product_floor_plan_path(@product) %>
